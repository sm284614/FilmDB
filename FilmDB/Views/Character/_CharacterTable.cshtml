@using FilmDB.Models.Database
@model List<CharacterCount>
<div class="table-responsive contentTable">
	<table class="table table-striped table-hover">
		<thead style="position: sticky; top: 0; background: white; z-index: 100; box-shadow: 0px 2px 5px rgba(0,0,0,0.1);">
			<th class="w-70">Name</th>
			<th class="w-30">Credits</th>
		</thead>
		<tbody>
			@foreach (var characterCount in Model)
			{
				<tr>
					<td>
						<a asp-controller="Character" asp-action="CharacterDetail" asp-route-characterId="@characterCount.Character.CharacterId">
							@characterCount.Character.Name
						</a>
					</td>
					<td>
						@characterCount.Count
					</td>					
				</tr>
			}
		</tbody>
	</table>
</div>